# Flask Application Settings
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here

# Database Configuration
MYSQL_HOST=db
MYSQL_USER=subscription_user
MYSQL_PASSWORD=your-db-password
MYSQL_DATABASE=subscription_db
MYSQL_PORT=3306
SQLALCHEMY_DATABASE_URI=mysql://subscription_user:your-db-password@db:3306/subscription_db

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds

# Admin User Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin-password-here

# API Settings
API_TITLE=Subscription API
API_VERSION=v1
API_PREFIX=/api

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Settings
BCRYPT_LOG_ROUNDS=12
PASSWORD_SALT=your-password-salt-here

# Rate Limiting
RATELIMIT_DEFAULT=200/hour
RATELIMIT_STORAGE_URL=memory://

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Email Configuration (if needed)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Redis Configuration (if needed)
REDIS_URL=redis://redis:6379/0

# Production Settings (set these in production)
# FLASK_ENV=production
# FLASK_DEBUG=0
# LOG_LEVEL=WARNING
